<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/receive_tv_supplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/text_normal"
        android:text="供应商:"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintRight_toLeftOf="@id/receive_et_supplier"
        />

    <EditText
        android:id="@+id/receive_et_supplier"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="请输入供应商"
        android:theme="@style/EditTextStyle"
        app:layout_constraintBottom_toBottomOf="@id/receive_tv_supplier"
        app:layout_constraintDimensionRatio="w:5:3"
        app:layout_constraintLeft_toRightOf="@id/receive_tv_supplier"
        app:layout_constraintRight_toLeftOf="@id/recive_iv_suppplier"
        app:layout_constraintTop_toTopOf="@id/receive_tv_supplier" />
    <ImageButton
        android:id="@+id/recive_iv_suppplier"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/receive_et_supplier"
        app:layout_constraintTop_toTopOf="@id/receive_tv_supplier"
        app:layout_constraintBottom_toBottomOf="@id/receive_tv_supplier"
         android:scaleType="fitXY"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@mipmap/search"
        android:background="@color/colorPrimary"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp"
        />


    <TextView
        android:id="@+id/receive_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/receive_et_supplier"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/text_normal"
        android:text="ASN类型:"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        />

    <Spinner
        android:id="@+id/receive_sp_spinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="请输入供应商"
        android:theme="@style/EditTextStyle"
        app:layout_constraintBottom_toBottomOf="@id/receive_tv_type"
        app:layout_constraintDimensionRatio="w:5:3"
        app:layout_constraintLeft_toRightOf="@id/receive_tv_type"
        app:layout_constraintRight_toLeftOf="@id/recive_iv_suppplier"
        app:layout_constraintTop_toTopOf="@id/receive_tv_type"
        />



    <TextView
        android:id="@+id/receive_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/receive_sp_spinner"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/text_normal"
        android:text="ASN编号:"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/receive_et_number"
        />

    <EditText
        android:id="@+id/receive_et_number"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="请输入ASN编号"
        android:theme="@style/EditTextStyle"
        app:layout_constraintBottom_toBottomOf="@id/receive_tv_number"
        app:layout_constraintDimensionRatio="w:5:3"
        app:layout_constraintLeft_toRightOf="@id/receive_tv_number"
        app:layout_constraintRight_toLeftOf="@id/recive_iv_number"
        app:layout_constraintTop_toTopOf="@id/receive_tv_number" />
    <ImageButton
        android:id="@+id/recive_iv_number"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/receive_et_number"
        app:layout_constraintTop_toTopOf="@id/receive_et_number"
        app:layout_constraintBottom_toBottomOf="@id/receive_et_number"
        android:scaleType="fitXY"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@mipmap/search"
        android:background="@color/colorPrimary"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp"
        />




    <TextView
        android:id="@+id/receive_tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/receive_et_number"
        android:textSize="@dimen/text_normal"
        android:text="客户订单号:"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="@id/receive_tv_supplier"
        app:layout_constraintRight_toLeftOf="@id/receive_et_number"
        />

    <EditText
        android:id="@+id/receive_et_order"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="请输入客户订单号"
        android:theme="@style/EditTextStyle"
        app:layout_constraintBottom_toBottomOf="@id/receive_tv_order"
        app:layout_constraintDimensionRatio="w:5:3"
        app:layout_constraintLeft_toRightOf="@id/receive_tv_order"
        app:layout_constraintRight_toLeftOf="@id/recive_iv_number"
        app:layout_constraintTop_toTopOf="@id/receive_tv_order" />




    <TextView
        android:id="@+id/receive_tv_shipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/receive_et_order"
        android:textSize="@dimen/text_normal"
        android:text="货主:"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="@id/receive_tv_supplier"
        app:layout_constraintRight_toLeftOf="@id/receive_et_number"
        />

    <EditText
        android:id="@+id/receive_et_shipper"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:theme="@style/EditTextStyle"
        app:layout_constraintBottom_toBottomOf="@id/receive_tv_shipper"
        app:layout_constraintDimensionRatio="w:5:3"
        android:editable="false"
        app:layout_constraintLeft_toRightOf="@id/receive_tv_order"
        app:layout_constraintRight_toLeftOf="@id/recive_iv_number"
        app:layout_constraintTop_toTopOf="@id/receive_tv_shipper" />




<Button

    android:id="@+id/receive_bt_confirm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="确认"
    style="@style/button_blue_theme"
    app:layout_constraintTop_toBottomOf="@id/receive_et_shipper"
    app:layout_constraintVertical_bias="0.3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.3"
    />

    <Button
        android:id="@+id/receive_bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        style="@style/button_gray_theme"
        app:layout_constraintTop_toBottomOf="@id/receive_et_shipper"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.8"

        />


</android.support.constraint.ConstraintLayout>