<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_back"
    tools:context=".pick.PickActivity">

    <LinearLayout
        android:id="@+id/pick_ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingVertical="@dimen/marginVertical">

        <EditText
            android:id="@+id/pick_et_ordercode"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:hint="出库单号"
            android:textColorHint="@color/text_gray"
            android:textColor="@color/text_black"
            android:theme="@style/EditTextStyle" />

        <com.bondex.ysl.pdaapp.ui.IconText
            android:id="@+id/pick_it_ordercode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="@string/search"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/marginVertical"
            android:textSize="@dimen/icon_normal"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/pick_tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pick_ll_search"
        app:layout_constraintBottom_toTopOf="@id/pick_recycler_view"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="共0条记录，当前位于第0条"
        android:theme="@style/normal_tv_gray"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pick_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h:5:3"
        app:layout_constraintTop_toBottomOf="@id/pick_tv_total"
        app:layout_goneMarginTop="@dimen/marginVertical"
        android:layout_marginTop="@dimen/marginVertical"
        >

    </android.support.v7.widget.RecyclerView>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/av_loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorName="@string/indicatorname"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>