<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_item_shape"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_marginLeft="20dp"

    >

    <com.bondex.ysl.pdaapp.ui.IconText
       android:id="@+id/tv_main_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xe88a;"
        android:textColor="@color/text_stay"
        android:textSize="@dimen/main_icon_size"
        android:layout_marginTop="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_main_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_nromal"
        android:textColor="@color/black_panit"
        android:text="adaad"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_item_icon"
        app:layout_constraintLeft_toLeftOf="@id/tv_main_item_icon"
        app:layout_constraintRight_toRightOf="@id/tv_main_item_icon"
        android:layout_marginTop="@dimen/marginVertical"
        />




</android.support.constraint.ConstraintLayout>