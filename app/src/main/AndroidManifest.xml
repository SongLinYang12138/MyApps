<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bondex.ysl.pdaapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.PdaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".login.LoginActivity"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".base.BaseActivtiy"></activity>
        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".stowrage.StowrageActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/dialog"></activity>
        <activity android:name=".movie.MovieInventoryActivity" />
        <activity android:name=".exwarehouse.ConsigeMentActivity" />

        <provider
            android:name=".util.provider.LoginProvider"
            android:authorities="com.bondex.ysl.pdaapp.login"
            android:exported="false" />

    </application>

</manifest>